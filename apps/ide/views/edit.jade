form(method="POST" action="/ide/createmd")
  label name
    input(input type="text" name="name" value="#{name}" class="form-control" pattern="[\w]+")
  label content
    textarea(name="content" class="form-control" rows="15")
       !{content}
  a(href="/" class="btn btn-default") Cancel
  button(type="submit" class="btn btn-primary") Save