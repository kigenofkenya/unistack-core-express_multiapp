extends layout
block content
  .animated.directory(role='main')
    .animated.navigation(role='navigation')
      ul
        li.active.wide(data-state='nav')
          a(href='#') nav
        li.wide(data-state='initial')
          a(href='#') initial
        li.wide
          a(data-state='initial', href='#') test3
    .animated.sidebar(role='sidebar')
      ul
        li One
        li Two
        li Three
        li Four
    #stage_wrapper.animated(role='content')
      .stage_box.padded
        h1 stage
        ul
          li
            a(href='#', data-state='nav') nav
          li
            a(href='#', data-state='initial') initial
          li
            a(href='#', data-state='sidebar') sidebar            
          li
            a(href='#', data-state='sidebar_extend') sidebar extend                
        div
          if templateControl == "table"
            include partials/control/table
          else if templateControl =="forms"
            include partials/control/forms
          else
            p no control template 
          div#targ
          if templateShow == "list"
            include partials/show/list
          else if templateShow =="table"
            include partials/show/table
          else if templateShow =="basic"
            include partials/show/basic    
          else
            p no show template partial          
        p#targ
    .padded.animated(role='bottomdrawer')
      h3 bottom drawer
      p
        a(data-state='bottomdown', href='#') bottomdown
      p
        a(data-state='bottomdown_navopen', href='#') bottomdown navopen
  // end main
  .padded.animated(role='presentation')
    h3 presentation content
    p
      a(data-state='inital', href='#') initial

