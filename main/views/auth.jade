doctype html
html
  head
    title Authentication Example
    link(rel='stylesheet', href='#{root}/stylesheets/auth.css')
  body
    h1 app root
    div#loginbox
      if usertoken
        p user token found!
      if message
        div !{message}
      span
        | Try accessing 
        a(href='#{root}/restricted') /restricted
        | , then authenticate with "tj" and "foobar".
      form(method='post', action='#{root}/login')
        p
          label Username:
          input(type='text', name='username')
        p
          label Password:
          input(type='text', name='password')
        p
          input(type='submit', value='Login')

